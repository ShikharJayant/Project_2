<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/my_fourth"
    android:background="@drawable/rounded_corner">

    <TextView
        android:id="@+id/note_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note Title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:id="@+id/note_content_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note content can be to long to take it inside"
        android:maxLines="2"
        android:textSize="16sp"
        android:ellipsize="end"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:id="@+id/note_timestamp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="timestamp"
        android:textSize="11sp"
        android:gravity="right"
        android:layout_marginVertical="4dp"/>

</LinearLayout>